doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="x-ua-compatible" content="ie=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    
    block title
      title wommytilliams
    
    block style
      link(rel="stylesheet" href="/static/_scss/app.css")
      link(rel="stylesheet" href="/static/_scss/app.min.css")
      link(rel="stylesheet" href="/static/_scss/app-screen.min.css")
      //- link(rel="icon" href="favicon.ico")

  body
    nav#mobileNav(onclick="toggle( 'toggleMe' )")
      img#hamburger(src='/static/_img/hamburger.svg')
      nav#toggleMe(style="display:none;")
        a(href="/" class="selected") home
        span Experience
        a(href="/branding") Branding
        a(href="/clients") Clients
        a(href="/resume") Resume
        span Experiments
        a(href="/feed") Feed
        a(href="/grid") Grid
        a(href="/media") Media
    
    div#mainNav
      nav
        h2(class="selected")
          a(href="/" class="selected") Home
        h2
          span Experience
          nav
            h2
              a(href="/brand") Branding
            h2
              a(href="/clients") Clients
            h2
              a(href="/resume") Resume
        h2
          span Experiments
          nav
            h2
              a(href="/feed") Feed
            h2
              a(href="/grid") Grid
        h2
          a(href="/media") Media
      nav#social
        span Contact
        a(href='mailto:tom@technomad.media?Subject=Job | from wommytilliams.com' target="_blank")
          img.social(src='/static/_img/social/email.svg')
          h2 tom@technomad.media
        a(href='#' onclick=" noDiscriminate(' https://www.facebook.com/Froggie92 ') ")
          img.social(src='/static/_img/social/facebook.svg')
          h2 facebook
        a(href='#' onclick=" noDiscriminate(' http://twitter.com/froggie92 ') ")
          img.social(src='/static/_img/social/twitter.svg')
          h2 twitter
        a(href='#' onclick=" noDiscriminate(' https://plus.google.com/u/0/118102255716845472363/posts ') ")
          img.social(src='/static/_img/social/google-plus.svg')
          h2 google+
        a(href='#' onclick=" noDiscriminate(' https://instagram.com/wommytilliams/ ') ")
          img.social(src='/static/_img/social/instagram.svg')
          h2 instagram
        
    div#content
      block content
        | {{ content }}
    
    block scripts
      script(src="/static/_scripts/app.min.js")
